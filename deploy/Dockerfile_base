FROM rocker/verse:4.2.0
RUN apt-get update -y && apt-get install -y  libicu-dev pandoc make  perl  zlib1g-dev libpng-dev libjpeg-dev libicu-dev pandoc make  libxml2-dev libicu-dev  make libcurl4-openssl-dev  cmake make zlib1g-dev libicu-dev  libicu-dev  make  cmake make libicu-dev  git libssl-dev libcurl4-openssl-dev  libcurl4-openssl-dev libssl-dev  zlib1g-dev  make zlib1g-dev  git libgit2-dev libssl-dev libcurl4-openssl-dev  libfontconfig1-dev libfreetype6-dev  libfontconfig1-dev libfreetype6-dev libicu-dev libglpk-dev libgmp3-dev libxml2-dev  git  git libxml2-dev libgit2-dev libssl-dev libicu-dev libcurl4-openssl-dev make pandoc zlib1g-dev  libglpk-dev libgmp3-dev libxml2-dev  libssl-dev libcurl4-openssl-dev  libjpeg-dev  pandoc  libpng-dev libjpeg-dev  cmake make  libssl-dev  zlib1g-dev libssl-dev libicu-dev libcurl4-openssl-dev pandoc make  libpng-dev  zlib1g-dev libpng-dev libjpeg-dev libicu-dev pandoc make libglpk-dev libgmp3-dev libxml2-dev  libicu-dev libglpk-dev libgmp3-dev libxml2-dev  git libgit2-dev libssl-dev libcurl4-openssl-dev make  libxml2-dev && rm -rf /var/lib/apt/lists/*
RUN mkdir -p /usr/local/lib/R/etc/ /usr/lib/R/etc/
RUN echo "options(renv.config.pak.enabled = TRUE, repos = c(CRAN = 'https://cran.rstudio.com/'), download.file.method = 'libcurl', Ncpus = 4)" | tee /usr/local/lib/R/etc/Rprofile.site | tee /usr/lib/R/etc/Rprofile.site
RUN R -e 'install.packages(c("renv","remotes"))'
COPY renv.lock.prod renv.lock
RUN R -e 'renv::restore()'
